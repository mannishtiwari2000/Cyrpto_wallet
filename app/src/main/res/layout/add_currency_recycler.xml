<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp">




            <TextView
                android:id="@+id/Currency_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/Image_cuurency"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="@string/passcode"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/Image_cuurency"
                android:layout_width="34dp"
                android:layout_height="34dp"

                android:layout_marginTop="18dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bitcoin_image" />

            <TextView
                android:id="@+id/Currency_Des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Currency_Title"
                android:layout_alignLeft="@id/Image_cuurency"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/checkbox"
                android:justificationMode="inter_word"
                android:textSize="11dp"
                android:text="@string/text1"
                />
            <CheckBox
                android:id="@+id/checkbox_passcode"
                style="@style/CustomCheckbox02"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="3dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>