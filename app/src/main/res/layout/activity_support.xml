<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white1"
    tools:context=".Activity.Support">
    <LinearLayout
        android:id="@+id/support2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/toolbar"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_gravity="center"
                android:text="@string/support"
                android:textColor="@color/white"
                android:id="@+id/toolbar_title" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_text1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:gravity="center" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"

            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="15dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/backup"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="@string/mobile_support"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/backup"
                    android:layout_below="@id/text"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="2dp"
                    android:textSize="10dp"
                    android:text="@string/text3"
                    android:justificationMode="inter_word"
                    />
                <ImageView
                    android:id="@+id/backup"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignLeft="@id/view"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mobile_support" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/knowlege_Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="15dp">

                <View
                    android:id="@+id/view2"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient" />


                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/passcode"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="@string/knowledge"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/passcode"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignLeft="@id/view2"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_knowledge_base" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_alignLeft="@id/passcode"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/checkbox"
                    android:justificationMode="inter_word"
                    android:textSize="11dp"
                    android:text="@string/text3"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/Add_ticket_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="15dp">

                <View
                    android:id="@+id/view1"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient" />


                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/finger"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="@string/ticket"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/finger"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignLeft="@id/view1"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text2"
                    android:layout_alignLeft="@id/finger"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="2dp"
                    android:textSize="11dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/checkbox1"
                    android:justificationMode="inter_word"
                    android:text="@string/text3"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/contact_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="15dp">

                <View
                    android:id="@+id/view3"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/gradient" />


                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/contact"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:text="@string/contact_us"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignLeft="@id/view3"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_mobile_support_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text3"
                    android:layout_alignLeft="@id/contact"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="2dp"
                    android:textSize="11dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/checkbox1"
                    android:justificationMode="inter_word"
                    android:text="@string/text3"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text="@string/privacy"
            android:layout_gravity="bottom"/>


    </LinearLayout>
   </ScrollView>