<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white1"
    tools:context=".fragement.Deshboard">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/first">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Balance"
            android:textColor="#242424"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2,500.00"
            android:textSize="30dp"
            android:textColor="#242424"
            android:layout_marginBottom="50dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
        />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/multiOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lytScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--  <View
                      android:id="@+id/v1"
                      android:layout_width="match_parent"
                      android:layout_height="5dp"
                      android:background="@color/colorPrimaryDark" />-->

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"

                    android:src="@drawable/ic_scan" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/scan"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <!--<View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_pay" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/recieve"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lytwallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--<View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_walet" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/balance"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lytaddMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--<View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/white" />-->

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_add_money" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_money"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cryptoinfo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deshboardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/overview"
        android:textSize="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/backup1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@mipmap/group16188" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="86dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/text1"
                android:padding="10dp"
                app:srcCompat="@mipmap/path2059" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/backup1"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="15dp"
                android:padding="1dp"
                android:text="$2000.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_alignLeft="@id/backup1"
                android:layout_marginLeft="40dp"

                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:justificationMode="inter_word"
                android:padding="1dp"
                android:text="Bitcoin"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView3"
                android:fontFamily="sans-serif-black"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price1"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="-1.322"
                android:textAlignment="center"
                android:textColor="#8bd780" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/backup"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@mipmap/group_blue" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="86dp"
                android:layout_height="41dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/text"
                android:padding="10dp"
                app:srcCompat="@mipmap/path2060" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/backup"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="15dp"
                android:padding="1dp"
                android:text="$2000.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_alignLeft="@id/backup"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:justificationMode="inter_word"
                android:padding="1dp"
                android:text="Ethereum"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView2"
                android:fontFamily="sans-serif-black"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="-1.0024"
                android:textAlignment="center"
                android:textColor="#8bd780" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_border"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:text="@string/add_more"

        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />



</LinearLayout>

</ScrollView>