<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionPin.TransactionPin"
    android:background="@color/white1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/backgroun_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_alignParentTop="true"
                    android:text="@string/login"
                    android:textSize="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/sign_up"
                    android:textColor="@color/purple_500"
                    android:textSize="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login"
                android:text="@string/hello_nice"
                android:layout_marginTop="80dp"
                android:textSize="12dp"
                android:textColor="@color/toolbar"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_pin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/toolbar"
                android:layout_marginLeft="20dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="20dp"/>

              <LinearLayout
                   android:id="@+id/root_otp_layout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="7dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:orientation="horizontal"
                   android:weightSum="6">

                   <EditText
                       android:id="@+id/otp_edit_box1"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:layout_marginRight="10dp"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:inputType="numberPassword"
                       android:imeOptions="actionNext"
                       android:textColorHint="@android:color/darker_gray"
                       android:maxLength="1"
                       android:textSize="15sp"
                       android:background="@drawable/edittext_curve_bg"/>

                   <EditText
                       android:id="@+id/otp_edit_box2"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:imeOptions="actionNext"
                       android:layout_marginRight="10dp"
                       android:textColorHint="@android:color/darker_gray"
                       android:textColor="@color/black"
                      
                       android:gravity="center"
                       android:textSize="15sp"
                        android:inputType="numberPassword"
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg"/>

                   <EditText
                       android:id="@+id/otp_edit_box3"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:textColor="@color/black"
                       android:imeOptions="actionNext"
                       android:textColorHint="@android:color/darker_gray"
                   
                       android:layout_height="50dp"
                       android:layout_marginRight="10dp"
                       android:gravity="center"
                       android:textSize="15sp"
                        android:inputType="numberPassword"
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg"/>

                   <EditText
                       android:id="@+id/otp_edit_box4"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:gravity="center"
                       android:textSize="15sp"
                       android:layout_marginRight="10dp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@color/black"
                      
                       android:layout_weight="1"
                        android:inputType="numberPassword"
                       android:imeOptions="actionNext"
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg" />

                   <EditText
                       android:id="@+id/otp_edit_box5"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:imeOptions="actionNext"
                       android:gravity="center"
                       android:textSize="15sp"
                       android:textColor="@color/black"
                      
                       android:textColorHint="@android:color/darker_gray"
                    android:layout_marginRight="10dp"
                       android:layout_weight="1"
                        android:inputType="numberPassword"
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg" />
                   <EditText
                       android:id="@+id/otp_edit_box6"
                       android:layout_width="0dp"
                       android:layout_height="50dp"
                       android:gravity="center"
                       android:textSize="15sp"
                       android:layout_weight="1"
                        android:inputType="numberPassword"
                       android:textColor="@color/black"
                       android:imeOptions="actionNext"
                       android:textColorHint="@android:color/darker_gray"
                      
                       android:maxLength="1"
                       android:background="@drawable/edittext_curve_bg" />

               </LinearLayout>
               <!--     <com.goodiebag.pinview.Pinview
                        android:id="@+id/pinview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pinWidth="35dp"
                        app:pinHeight="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:pinLength="6"
                        app:cursorVisible="false"
                        app:forceKeyboard="true"
                        app:inputType="text"
                        app:password="false"/>-->


                    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/c_transaction"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="20dp"/>


               <LinearLayout
                        android:id="@+id/root_otp_layou1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                       
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <EditText
                            android:id="@+id/otp_edit_box11"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:imeOptions="actionNext"
                            android:gravity="center"
                            android:textColor="@color/black"
                           
                             android:textColorHint="@android:color/darker_gray"
                              android:inputType="numberPassword"
                            android:maxLength="1"
                            android:textSize="15sp"
                            android:background="@drawable/edittext_curve_bg"/>

                        <EditText
                            android:id="@+id/otp_edit_box22"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:textSize="15sp"
                             android:inputType="numberPassword"
                            android:textColor="@color/black"
                             android:textColorHint="@android:color/darker_gray"
                   
                            android:maxLength="1"
                            android:background="@drawable/edittext_curve_bg"/>

                        <EditText
                            android:id="@+id/otp_edit_box33"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:imeOptions="actionNext"
                            android:gravity="center"
                            android:textColor="@color/black"
                           
                            android:textSize="15sp"
                             android:textColorHint="@android:color/darker_gray"
                     android:inputType="numberPassword"
                            android:maxLength="1"
                            android:background="@drawable/edittext_curve_bg"/>

                        <EditText
                            android:id="@+id/otp_edit_box44"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                           
                            android:imeOptions="actionNext"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                             android:textColorHint="@android:color/darker_gray"
                     android:inputType="numberPassword"
                            android:maxLength="1"
                            android:background="@drawable/edittext_curve_bg" />

                        <EditText
                            android:id="@+id/otp_edit_box55"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                           
                            android:layout_marginRight="10dp"
                             android:textColorHint="@android:color/darker_gray"
                            android:layout_weight="1"
                             android:inputType="numberPassword"
                            android:maxLength="1"
                            android:background="@drawable/edittext_curve_bg" />
                        <EditText
                            android:id="@+id/otp_edit_box66"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                           
                            android:textColorHint="@android:color/darker_gray"
                              android:inputType="numberPassword"
                            android:maxLength="1"
                            android:background="@drawable/edittext_curve_bg" />

                    </LinearLayout>

              <!--      <com.goodiebag.pinview.Pinview

                        android:id="@+id/pinview1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pinWidth="35dp"
                        app:pinHeight="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:pinLength="6"
                        app:cursorVisible="true"
                        app:forceKeyboard="true"
                        app:inputType="text"
                        android:textColor="@color/black"
                        app:password="false"/>
-->


                    <Button
                android:id="@+id/referral_ready"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/user"
                android:onClick="Trnasaction_Pin"
                android:text="@string/next"
                android:textSize="20dp"
                android:background="@drawable/rounded_button"
                android:textAllCaps="false"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:textColor="@android:color/darker_gray"
                android:text="@string/below_text"
                android:justificationMode="inter_word"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

    </ScrollView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>