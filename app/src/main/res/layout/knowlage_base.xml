<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/card_background"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp">


            <TextView
                android:id="@+id/Query_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/view"
                android:text="This is demo text which is show that "
                android:textColor="@color/toolbar_text_color"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/ReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/readmore"
                android:textColor="@color/toolbar_text_color"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Detail_Knowlege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:layout_marginLeft="15dp"
                android:drawablePadding="10dp"
                android:justificationMode="inter_word"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                 android:drawableRight="@drawable/ic_group_16268"
                android:layout_below="@+id/Query_details"
                android:text="@string/knowlege_Description_Demo"
                android:textSize="15dp"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>