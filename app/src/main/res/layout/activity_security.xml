<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".Activity.Security">
 <LinearLayout
     android:id="@+id/security2"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="56dp"
             android:background="@color/toolbar"
             android:orientation="horizontal">
             <ImageView
                 android:id="@+id/back"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginLeft="15dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_baseline_arrow_back_24"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="25dp"
                 android:layout_marginRight="20dp"
                 android:textStyle="bold"
                 android:textAlignment="center"
                 android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                 android:layout_gravity="center"
                 android:text="@string/security"
                 android:textColor="@color/white"
                 android:id="@+id/toolbar_title" />
         </LinearLayout>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardBackgroundColor="@color/card_background"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="5dp"
         app:cardCornerRadius="5dp"
         android:elevation="2dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:paddingBottom="15dp">

             <View
                 android:id="@+id/view"
                 android:layout_width="5dp"
                 android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/gradient" />


             <TextView
                 android:id="@+id/text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/backup"
                 android:layout_marginLeft="40dp"
                 android:layout_marginTop="15dp"
                 android:textStyle="bold"
                 android:text="@string/backup"
                 android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                 android:textColor="@color/toolbar_text_color"
                 android:textSize="17dp" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/backup"
                 android:layout_below="@id/text"
                 android:layout_marginLeft="40dp"
                 android:layout_marginRight="45dp"
                 android:layout_marginTop="2dp"
                 android:textSize="10dp"
                 android:text="@string/text"
                 android:justificationMode="inter_word"
                 />
             <ImageView
                 android:id="@+id/backup"
                 android:layout_width="34dp"
                 android:layout_height="34dp"
                 android:layout_alignLeft="@id/view"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="17dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/ic_backups" />

         </RelativeLayout>

     </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardBackgroundColor="@color/card_background"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         app:cardCornerRadius="5dp"
         android:elevation="2dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:paddingBottom="15dp">

             <View
                 android:id="@+id/view2"
                 android:layout_width="5dp"
                 android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/gradient" />


             <TextView
                 android:id="@+id/text1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/passcode"
                 android:layout_marginLeft="40dp"
                 android:layout_marginTop="15dp"
                 android:textStyle="bold"
                 android:text="@string/passcode"
                 android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                 android:textColor="@color/toolbar_text_color"
                 android:textSize="16dp" />

             <ImageView
                 android:id="@+id/passcode"
                 android:layout_width="34dp"
                 android:layout_height="34dp"
                 android:layout_alignLeft="@id/view2"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="17dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/ic_secure_with_passcode" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/text1"
                 android:layout_alignLeft="@id/passcode"
                 android:layout_marginLeft="39dp"
                 android:layout_marginTop="2dp"
                 android:layout_marginRight="11dp"
                 android:layout_toLeftOf="@+id/checkbox"
                 android:justificationMode="inter_word"
                 android:textSize="11dp"
                 android:text="@string/text1"
                 />
             <CheckBox
                 android:id="@+id/checkbox"
                 style="@style/CustomCheckbox02"
                 android:layout_width="30dp"
                 android:checked="true"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="25dp"
                 android:layout_marginRight="3dp" />

         </RelativeLayout>

     </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardBackgroundColor="@color/card_background"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
         app:cardCornerRadius="5dp"
         android:elevation="2dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:paddingBottom="15dp">

             <View
                 android:id="@+id/view1"
                 android:layout_width="5dp"
                 android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/gradient" />


             <TextView
                 android:id="@+id/text2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/finger"
                 android:layout_marginLeft="40dp"
                 android:layout_marginTop="15dp"
                 android:textStyle="bold"
                 android:text="@string/finger"
                 android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                 android:textColor="@color/toolbar_text_color"
                 android:textSize="16dp" />

             <ImageView
                 android:id="@+id/finger"
                 android:layout_width="34dp"
                 android:layout_height="34dp"
                 android:layout_alignLeft="@id/view1"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="17dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/ic_secure_with_fingerprint" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/text2"
                 android:layout_alignLeft="@id/finger"
                 android:layout_marginLeft="39dp"
                 android:layout_marginTop="2dp"
                 android:textSize="11dp"
                 android:layout_marginRight="11dp"
                 android:layout_toLeftOf="@+id/checkbox1"
                 android:justificationMode="inter_word"
                 android:text="@string/text2"
                 />
             <CheckBox
                 android:id="@+id/checkbox1"
                 style="@style/CustomCheckbox02"
                 android:layout_width="30dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="25dp"
                 android:layout_marginRight="3dp" />
         </RelativeLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:id="@+id/tofa"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardBackgroundColor="@color/card_background"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="5dp"
         app:cardCornerRadius="5dp"
         android:elevation="2dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:paddingBottom="15dp">

             <View
                 android:id="@+id/view3"
                 android:layout_width="5dp"
                 android:layout_height="40dp"
                 android:layout_alignParentLeft="true"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/gradient" />


             <TextView
                 android:id="@+id/text3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/auth"
                 android:layout_marginLeft="40dp"
                 android:layout_marginTop="15dp"
                 android:textStyle="bold"
                 android:text="@string/To_fa"
                 android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                 android:textColor="@color/toolbar_text_color"
                 android:textSize="17dp" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@id/auth"
                 android:layout_below="@id/text3"
                 android:layout_marginLeft="40dp"
                 android:layout_marginRight="45dp"
                 android:layout_marginTop="2dp"
                 android:textSize="10dp"
                 android:maxLines="2"
                 android:text="@string/text"
                 android:justificationMode="inter_word"
                 />
             <ImageView
                 android:id="@+id/auth"
                 android:layout_width="34dp"
                 android:layout_height="34dp"
                 android:layout_alignLeft="@id/view3"
                 android:layout_marginTop="12dp"
                 android:layout_marginLeft="17dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/ic_authentication" />

         </RelativeLayout>

     </androidx.cardview.widget.CardView>
 </LinearLayout>
</ScrollView>